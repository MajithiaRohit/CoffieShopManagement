@using System.Data;
<div class="col-lg-12">
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger mb-3 mt-3" role="alert">
            @TempData["error"]
        </div>

    }
    @if (Convert.ToInt32(TempData["OrderDetailID"]) <0)
    {
        @if (TempData["SuccessMessageAdd"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessageAdd"]
            </div>
        }
    }
    else
    {
        @if (TempData["SuccessMessageEdit"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessageEdit"]
            </div>
        }
    }

    <div class="card">

        <div class="card-body">
            <h5 class="card-title">Order Details List</h5>
            <a class="btn btn-outline-success" asp-action="AddEditOrderDetailForm">Add New Detail</a>
            <!-- Table with stripped rows -->
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Order Detail ID</th>
                        <th scope="col">Order ID</th>
                        <th scope="col">Product ID</th>
                        <th scope="col">Amount</th>
                        <th scope="col"> Total Amount</th>
                        <th scope="col">User ID</th>
                    </tr>
                </thead>
                <tbody>

                    @{
                        foreach (DataRow oreders in Model.Rows)
                        {
                            <tr>
                                <td>OD @oreders["OrderDetailID"]</td>
                                <td># @oreders["OrderID"]</td>
                                <td># @oreders["ProductName"]</td>
                                <td>₹ @oreders["Amount"]</td>
                                <td>₹ @oreders["TotalAmount"]</td>
                                <td>@oreders["UserName"]</td>
                                <td>
                                    <form asp-action="AddEditOrderDetailForm" asp-controller="OrderDetail" method="post" class="d-inline">
                                        <input type="hidden" name="OrderDetailID" value="@oreders["OrderDetailID"]" />
                                        <button type="submit" class="btn btn-outline-primary">Edit</button>
                                    </form>
                                    <form asp-action="DeleteOrderDetail" asp-controller="OrderDetail" method="post" class="d-inline">
                                        <input type="hidden" name="OrderDetailID" value="@oreders["OrderDetailID"]" />
                                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this Order Detail?');">Delete</button>
                                    </form>

                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <!-- End Table with stripped rows -->

        </div>
    </div>
</div>