@using System.Data;
<div class="col-lg-12">
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger mb-3 mt-3" role="alert" id="popupMessage">
            @TempData["error"]
        </div>

    }
    else if (TempData["SuccessMassage"] != null)
    {
        <div class="alert alert-danger mb-3 mt-3" role="alert" id="popupMessage">
            @TempData["SuccessMassage"]
        </div>
    }

    @if (Convert.ToInt32(TempData["ProductID"]) <= 0)
    {
        @if (TempData["SuccessMessageAdd"] != null)
        {
            <div class="alert alert-success" id="popupMessage">
                @TempData["SuccessMessageAdd"]
            </div>
        }
    }
    else
    {
        @if (TempData["SuccessMessageEdit"] != null)
        {
            <div class="alert alert-success" id="popupMessage">
                @TempData["SuccessMessageEdit"]
            </div>
        }
    }
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Order List</h5>
            <a class="btn btn-outline-success"  asp-action="OrderForm">Place New Order +</a>
            <!-- Table with stripped rows -->
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">OrderID</th>
                        <th scope="col">OrderDate</th>
                        <th scope="col">CustomerName</th>
                        <th scope="col">PaymentMode</th>
                        <th scope="col">TotalAmount</th>
                        <th scope="col">ShippingAddress</th>
                        <th scope="col">UserName</th>
                    </tr>
                </thead>
                <tbody>

                    @{
                        foreach (DataRow oreders in Model.Rows)
                        {
                            <tr>
                                <td>@oreders["OrderID"]</td>
                                <td>@oreders["OrderDate"]</td>
                                <td>@oreders["CustomerName"]</td>
                                <td>@oreders["PaymentModeName"]</td>
                                <td>@oreders["TotalAmount"]</td>
                                <td>@oreders["ShippingAddress"]</td>
                                <td>@oreders["UserName"]</td>
                                <td>
                                    <form asp-action="OrderForm" asp-controller="Order" method="post" class="d-inline">
                                        <input type="hidden" name="OrderID" value="@oreders["OrderID"]" />
                                        <button type="submit" class="btn btn-outline-primary">Edit</button>
                                    </form>

                                    <form asp-action="DeleteOrder" asp-controller="Order" method="post" class="d-inline">
                                        <input type="hidden" name="OrderID" value="@oreders["OrderID"]" />
                                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this Order?');">Delete</button>
                                    </form>

                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <!-- End Table with stripped rows -->

        </div>
    </div>
</div>
<script>
    setTimeout(function () {
        var message = document.getElementById("popupMessage");
        if (message) {
            message.style.display = "none";
        }
    }, 2000); // Hide after 5 seconds
</script>