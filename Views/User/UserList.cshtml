@using System.Data;


<div class="col-lg-12">
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger mb-3 mt-3" role="alert" id="popupMessage">
            @TempData["error"]
        </div>

    }
    else if (TempData["SuccessMassage"] != null)
    {
        <div class="alert alert-danger mb-3 mt-3" role="alert" id="popupMessage">
            @TempData["SuccessMassage"]
        </div>
    }

    @if (Convert.ToInt32(TempData["UserID"]) < 0)
    {
        @if (TempData["SuccessMessageAdd"] != null)
        {
            <div class="alert alert-success" id="popupMessage">
                @TempData["SuccessMessageAdd"]
            </div>
        }
    }
    else
    {
        @if (TempData["SuccessMessageEdit"] != null)
        {
            <div class="alert alert-success" id="popupMessage">
                @TempData["SuccessMessageEdit"]
            </div>
        }
    }
    <div class="card">
        <div class="card-body">
           
            <h5 class="card-title">User List</h5>
            <a class="btn btn-outline-success" asp-controller="User" asp-action="AddEditUser">Add User <i class="bi bi-person-add"></i></a>
            <!-- Table with stripped rows -->
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">UserID</th>
                        <th scope="col">UserName</th>
                        <th scope="col">Email</th>
                        <th scope="col">Password</th>
                        <th scope="col">MobileNo</th>
                        <th scope="col">Address</th>
                        <th scope="col">IsActive</th>
                        <th scope="col">Actions</th> <!-- Added Actions column -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow user in Model.Rows)
                    {
                        <tr>
                            <td>@user["UserID"]</td>
                            <td>@user["UserName"]</td>
                            <td>@user["Email"]</td>
                            <td>@user["Password"]</td>
                            <td>@user["MobileNo"]</td>
                            <td>@user["Address"]</td>
                            <td>@user["IsActive"]</td>
                            <td>
                                <form asp-action="AddEditUser" asp-controller="User" method="post" class="d-inline">
                                    <input type="hidden" name="UserID" value="@user["UserID"]" />
                                    <button type="submit" class="btn btn-outline-primary">Edit</button>
                                </form>

                                <form asp-action="DeleteUser" asp-controller="User" method="post" class="d-inline">
                                    <input type="hidden" name="UserID" value="@user["UserID"]" />
                                    <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- End Table with stripped rows -->
        </div>
    </div>
</div>
<script>
    setTimeout(function () {
        var message = document.getElementById("popupMessage");
        if (message) {
            message.style.display = "none";
        }
    }, 2000); // Hide after 5 seconds
</script>