@using System.Data;
<div class="col-lg-12">
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger mb-3 mt-3" role="alert" id="popupMessage">
            @TempData["error"]
        </div>
    }
    @if (Convert.ToInt32(TempData["OrderDetailID"]) < 0)
    {
        @if (TempData["SuccessMessageAdd"] != null)
        {
            <div class="alert alert-success" id="popupMessage">
                @TempData["SuccessMessageAdd"]
            </div>
        }
    }
    else
    {
        @if (TempData["SuccessMessageEdit"] != null)
        {
            <div class="alert alert-success" id="popupMessage">
                @TempData["SuccessMessageEdit"]
            </div>
        }
    }

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Bills</h5>
            <a class="btn btn-outline-success" asp-controller="Bills" asp-action="AddEditBillsForm">Genrate new Bill</a>

            <!-- Table with stripped rows -->
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">BillID</th>
                        <th scope="col">BillNumber</th>
                        <th scope="col">BillDate</th>
                        <th scope="col">OrderID</th>
                        <th scope="col">TotalAmount</th>
                        <th scope="col">Discount</th>
                        <th scope="col">NetAmount</th>
                        <th scope="col">UserID</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow bill in Model.Rows)
                    {
                        <tr>
                            <td>@bill["BillID"]</td>
                            <td>@bill["BillNumber"]</td>
                            <!-- Display only the date portion -->
                            <td>@Convert.ToDateTime(bill["BillDate"]).ToString("dd-MM-yyyy")</td>
                            <td>@bill["OrderID"]</td>
                            <td>@bill["TotalAmount"]</td>
                            @{
                                if (bill["Discount"] == null)
                                {
                                    <td>0%</td>
                                }
                                else
                                {
                                    <td>@bill["Discount"] %</td>
                                }
                            }
                            <td>₹ @bill["NetAmount"]</td>
                            <td>@bill["UserName"]</td>
                            <td>
                                <form asp-action="AddEditBillsForm" asp-controller="Bills" method="post" class="d-inline">
                                    <input type="hidden" name="BillID" value="@bill["BillID"]" />
                                    <button type="submit" class="btn btn-outline-primary">Edit</button>
                                </form>
                                <form asp-action="DeleteBill" asp-controller="Bills" method="post" class="d-inline">
                                    <input type="hidden" name="BillID" value="@bill["BillID"]" />
                                    <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this Order Detail?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- End Table with stripped rows -->

        </div>
    </div>
</div>

<!-- JavaScript for auto-hide popup messages -->
<script>
    setTimeout(function () {
        var message = document.getElementById("popupMessage");
        if (message) {
            message.style.display = "none";
        }
    }, 2000); // Hide after 5 seconds
</script>
